<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:backgroundTint="@color/principal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titulo_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo evento"
            android:textSize="18dp"
            android:textColor="@color/white" />


        <EditText
            android:id="@+id/editar_titulo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:layout_marginEnd="50dp"
            android:layout_toEndOf="@+id/titulo_sheet"
            android:background="@drawable/bordes"
            android:text="Titulo evento"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/programacion_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_sheet"
            android:textSize="18dp"
            android:text="Programacion"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/descrpcion_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/programacion_sheet"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:text="Titulo evento"
            android:textColor="@color/white" />
    </RelativeLayout>


</LinearLayout>